{
  "name": "LaundroMate Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.pylint",
        "ms-vscode.vscode-json",
        "bradlc.vscode.tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.sortImports.args": ["--profile", "black"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "python.analysis.extraPaths": ["/workspace/apps/api"],
        "python.analysis.autoImportCompletions": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.diagnosticMode": "workspace",
        "python.analysis.include": ["**/*.py"],
        "python.analysis.exclude": ["**/node_modules", "**/__pycache__"],
        "python.languageServer": "Pylance"
      }
    }
  },

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",

  "forwardPorts": [8000, 5432, 6379],

  "environmentVariables": {
    "PYTHONPATH": "/workspace/apps/api"
  },

  "postCreateCommand": "cd /workspace/apps/api && pip install -r requirements.txt && pip install -e .[dev]"
}
