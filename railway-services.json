{
  "services": [
    {
      "name": "laundromate-api",
      "source": "apps/api",
      "variables": {
        "DATABASE_URL": "{{.Postgres.DATABASE_URL}}",
        "REDIS_URL": "{{.Redis.REDIS_URL}}",
        "SECRET_KEY": "{{.Secret.SECRET_KEY}}",
        "ENVIRONMENT": "production"
      }
    },
    {
      "name": "laundromate-web",
      "source": "apps/web",
      "variables": {
        "NEXT_PUBLIC_API_URL": "{{.laundromate-api.PUBLIC_URL}}",
        "NEXT_PUBLIC_APP_ENVIRONMENT": "production"
      }
    },
    {
      "name": "laundromate-postgres",
      "type": "postgresql",
      "variables": {
        "POSTGRES_DB": "laundromate",
        "POSTGRES_USER": "laundromate"
      }
    },
    {
      "name": "laundromate-redis",
      "type": "redis"
    }
  ]
}
